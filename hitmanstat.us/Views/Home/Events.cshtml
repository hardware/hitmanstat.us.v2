@model IEnumerable<hitmanstat.us.Models.Event>

@{
    ViewData["Title"] = "Events";
}

@section EventsHeader {
    <div class="alert alert-header" role="alert">
        <div class="text-center">
            <h4 class="alert-heading">LATEST DOWN OR MAINTENANCE EVENTS REPORTED</h4>
            <span class="separator"></span>
            <p class="mb-0">
                Since @ViewBag.days days ago &nbsp; | &nbsp;
                @if (ViewBag.days == 30)
                {
                    <a asp-area="" asp-controller="Home" asp-action="Events" asp-route-days="7">Show last week</a>
                }
                else
                {
                    <a asp-area="" asp-controller="Home" asp-action="Events" asp-route-days="30">Show last month</a>
                }
            </p>
        </div>
    </div>
}

<table class="table table-bordered table-striped table-light">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th scope="col">Relative Time</th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.State)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            string lastDate = string.Empty;

            @foreach (var item in Model)
            {
                var sdate = item.Date.ToString("dddd, MMM d, yyyy");

                if (lastDate != sdate)
                {
                    <tr>
                        <td class="table-secondary text-center" colspan="4">@sdate</td>
                    </tr>
                }

                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td data-utcdate="@item.Date.ToString("s")"></td>
                    <td>@Html.DisplayFor(modelItem => item.Service)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                </tr>

                lastDate = sdate;
            }
        }
        else
        {
            <tr>
                <td class="text-center" colspan="4">No event occurred</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script src="~/js/jquery-bootstrap.min.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(function () {
            $('[data-utcdate]').each(function () {
                var date = moment($(this).attr('data-utcdate'));
                $(this).html(date.fromNow());
            });
        });
    </script>

}