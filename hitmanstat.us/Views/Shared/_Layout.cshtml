@{
    var description = "HITMAN status website provides the current status and incident reporting for HITMAN online services.";
    var title = ViewData["Title"] != null ? string.Format("{0} - HITMAN Status", ViewData["Title"]) : "HITMAN Status";
    var background = string.Empty;

    @if (ViewBag.mainError != null)
    {
        background = "main-error";
    }
}

